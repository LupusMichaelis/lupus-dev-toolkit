#!/usr/bin/env bash

set -euo pipefail

[ -v DEBUG ] \
	&& set -x || set +x

declare -r bin_path=$(dirname "$(realpath "${BASH_SOURCE[0]}")")
declare -r install_path=$(realpath "$bin_path/../")

if [ -f "$install_path/.env" ]
then
	echo File .env already exists.
	exit 1
fi

# Set those variables to your liking, they'll be used by Docker Compose to know where to
# look and how set set up your machines

{
    echo LP_DEV_GID=$(id -g)
    echo LP_DEV_UID=$UID
    echo LP_DEV_USER_ALIAS=dev
    echo LUPUSMICHAELIS_DEV_GID=$(id -g)
    echo LUPUSMICHAELIS_DEV_UID=$UID
    echo LUPUSMICHAELIS_DEV_USER_ALIAS=dev
    echo REPOSITORY_DIR=$HOME/repositories
    echo WORKSHOP_DIR=$HOME/workshop
} > "$install_path/.env"
