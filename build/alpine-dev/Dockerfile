# syntax=docker/dockerfile:1.5.1
ARG LUPUSMICHAELIS_ALPINE_VERSION

FROM lupusmichaelis/alpine:$LUPUSMICHAELIS_ALPINE_VERSION
LABEL description="Alpine Linux with dev user"

ARG LUPUSMICHAELIS_ALPINE_VERSION
ENV LUPUSMICHAELIS_ALPINE_VERSION=${LUPUSMICHAELIS_ALPINE_VERSION}

ARG LUPUSMICHAELIS_DEV_USER_ALIAS
ENV LUPUSMICHAELIS_DEV_USER_ALIAS=${LUPUSMICHAELIS_DEV_USER_ALIAS}

ARG LUPUSMICHAELIS_DEV_UID
ENV LUPUSMICHAELIS_DEV_UID=${LUPUSMICHAELIS_DEV_UID}

ARG LUPUSMICHAELIS_DEV_GID
ENV LUPUSMICHAELIS_DEV_GID=${LUPUSMICHAELIS_DEV_GID}
